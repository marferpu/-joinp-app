<div class="container">
  <div class="row gy-4">
    <h1 class="mt-10 mb-6">JoinPeople</h1>
    <h3 class="mb-3"> Encuentra el mejor espacio que se adapte a tus necesidades para tus encuentros y eventos </h5>
  </div>

<div class="container mb=10">
  <%= form_with url: places_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Encuentra un lugar"
    %>
    <%= submit_tag "Buscar", class: "btn btn-primary" %>
  <% end %>
</div>

  <div class="row">
    <% @places.each do |place| %>
      <div class="col-sm">
        <div class="card h-100 " style="width: 18rem;">
        <% if place.photos.blank? %>
          <%= image_tag place.photo_url, width: 100, height: 100, class:"card-img-top" %>
        <% else %>
          <% place.photos.each do |photo| %>

            <%= image_tag photo.url, width: 100, height: 100, class:"card-img-top" %>
          <% end %>
        <% end %>
          <div class="box card-body">
            <h5 class="card-title fw-bold" ><%= place.title %>  (<%= place.category %>)</h5>
            <p class="card-text"><%= place.description %></p>
            <%= link_to "Ver mÃ¡s", place_path(place.id), class:"btn btn-primary"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
